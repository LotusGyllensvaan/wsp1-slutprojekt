<body>
  <header>
    <nav>
      <div class="auth-links">
        <a href="/login" class="auth-link">Login</a>
        <a href="/signup" class="auth-link">Sign Up</a>
      </div>
      Welcome to Rods and Cods - Freshwater Fishing Supplies
    </nav>
  </header>

  <h1>Tackle that Box</h1>

  <div class="product-grid">
    <% @products.each do |prod| %>
      <div class="product-card">
        <img src="<%= prod['image_url'] || '/default-image.jpg' %>" alt="<%= prod['article'] %>" class="product-image">
        <h3><%= prod['article'] %></h3>
        <h4><%= prod['description'] %></h4>
        <h6><%= prod['category'] %></h6>
      </div>
    <% end %>
  </div>

  <footer>
    &copy; <%= Time.now.year %> Rods And Cods. Happy Fishing!
  </footer>
</body>
</html>
